<a href='/dashboard' class='btn'>Back to Dashboard</a>

<div class="admin-title">
    <h2>Edit Post</h2>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete Post" class="btn">
        </form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" value="<%= data.title %>" name="title" class="form-control">
    </div>
    <div class="form-group">
        <label for="body">Content</label>
        <textarea name="body" class="form-control" value="<%= data.body %>" cols="50" rows="18"></textarea>
    </div>
    <input type="submit" value="Update" class="btn">
</form>