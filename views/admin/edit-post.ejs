<div class="admin-title">
    <h2>Edit Post</h2>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete Post" class="btn">
        </form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
    
        <label for="title">Title</label>
        <input type="text" value="<%= data.title %>" name="title">
    
        <label for="body">Content</label>
        <textarea name="body"class="form-control"  cols="50" rows="18"><%= data.body %></textarea>

    <input type="submit" value="update" class="btn">
</form>