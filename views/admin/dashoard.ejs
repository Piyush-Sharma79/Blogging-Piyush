<div class="admin-title">
    <h2>Welcome<u>
            <%= user.username %>
        </u></h2>

    <h2>Posts</h2>
    <a href="/add-post" class="btn"> Add Post</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post=> { %>
        <li>
            <a href="/post/<%= post._id %>"
                style=" font-size:17px; font-weight:800; text-decoration:none; color:rgb(47, 47, 47)">
                <%= post.title %>
            </a>
            <div class="admin-post-controls" style="display:flex; justify-content:space-between">
                <a href="/edit-post/<%= post._id %>" class="vutton type1" style="text-decoration:none "><span
                        class="vtn-text vutton type1">EDit</span></a>
                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST" class="vutton type1"
                    style="margin-left:4px; ">
                    <input type="submit" value="Delete" class="vutton type1 vtn-text">
                </form>

            </div>
        </li>
        <% }) %>